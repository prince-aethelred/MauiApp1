<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.AboutPage"
             >
    <ScrollView>
    <StackLayout Spacing="10" Margin="10" VerticalOptions="FillAndExpand">
        <HorizontalStackLayout Spacing="10">
            <Image Source="dotnet_bot.png"
                   SemanticProperties.Description="The dot net bot waving hello!"
                   HeightRequest="64" />
            <Label FontSize="22" FontAttributes="Bold" Text="Notes" VerticalOptions="End" />
            <Label FontSize="22" Text="v1.0" VerticalOptions="End" />
        </HorizontalStackLayout>

        <Label Text="This app is written in XAML and C# with .NET MAUI." />
        <Button Text="Learn more... 한국어" Clicked="HangugeoClicked" />
        <WebView Source="https://www.howtostudykorean.com/" 
                 VerticalOptions="FillAndExpand"
                 HorizontalOptions="FillAndExpand"/>

    </StackLayout>
    </ScrollView>
</ContentPage>